  const API_KEY = 'your-api-key';

  useEffect(() => {
    fetch('http://localhost:3000/api/concerts', {
      headers: { 'X-API-Key': API_KEY }
    })
    .then(res => res.json())
    .then(data => setConcerts(data.data));
  }, []);

  return (
    <div>
      {concerts.map(c => <div key={c.id}>{c.name}</div>)}
    </div>
  );
}</div>
