<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>API Explorer - Info Konser</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }

        .api-explorer-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .explorer-card {
            background: white;
            border-radius: 15px;
            padding: 30px;
            margin-bottom: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }

        .explorer-title {
            font-size: 28px;
            font-weight: 700;
            margin-bottom: 10px;
            color: #667eea;
        }

        .explorer-subtitle {
            color: #718096;
            margin-bottom: 25px;
            line-height: 1.6;
        }

        .form-row {
            margin-bottom: 20px;
        }

        .form-row label {
            display: block;
            font-weight: 600;
            margin-bottom: 8px;
            color: #2d3748;
        }

        .form-row input, .form-row select {
            width: 100%;
            padding: 12px;
            border: 2px solid #e2e8f0;
            border-radius: 8px;
            font-size: 14px;
            transition: all 0.3s;
        }

        .form-row input:focus, .form-row select:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        .tabs {
            display: flex;
            gap: 10px;
            margin: 25px 0;
            flex-wrap: wrap;
        }

        .tab {
            padding: 12px 24px;
            background: #e9ecef;
            border: none;
            border-radius: 25px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s;
            font-size: 14px;
        }

        .tab:hover {
            background: #667eea;
            color: white;
            transform: translateY(-2px);
        }

        .tab.active {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }

        .tab-content {
            display: none;
            padding: 20px 0;
        }

        .tab-content.active {
            display: block;
        }

        .tab-content h3 {
            color: #2d3748;
            margin-bottom: 10px;
        }

        .tab-content p {
            color: #718096;
            margin-bottom: 20px;
        }

        .param-table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }

        .param-table th, .param-table td {
            text-align: left;
            padding: 12px;
            border-bottom: 1px solid #e2e8f0;
        }

        .param-table th {
            background: #f7fafc;
            font-weight: 600;
            color: #2d3748;
        }

        .param-table input, .param-table select {
            padding: 8px;
            border: 2px solid #e2e8f0;
            border-radius: 6px;
            font-size: 14px;
        }

        .btn-show-response {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 14px 35px;
            border: none;
            border-radius: 25px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }

        .btn-show-response:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(102, 126, 234, 0.5);
        }

        .btn-show-response:disabled {
            background: #cbd5e0;
            cursor: not-allowed;
            transform: none;
        }

        .result-section {
            margin-top: 30px;
        }

        .result-card {
            background: #f7fafc;
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 15px;
            border-left: 5px solid #667eea;
        }

        .result-card h3 {
            margin-top: 0;
            margin-bottom: 15px;
            color: #2d3748;
            font-size: 18px;
        }

        .result-card pre {
            background: #1e1e1e;
            color: #e2e8f0;
            padding: 20px;
            border-radius: 8px;
            overflow-x: auto;
            font-size: 13px;
            line-height: 1.6;
            margin: 0;
            font-family: 'Consolas', 'Monaco', monospace;
        }

        .loading {
            display: inline-block;
            width: 16px;
            height: 16px;
            border: 3px solid #f3f3f3;
            border-top: 3px solid #667eea;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin-left: 10px;
            vertical-align: middle;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .status-success {
            color: #38ef7d;
            font-weight: 600;
        }

        .status-error {
            color: #ff6b6b;
            font-weight: 600;
        }

        .link {
            color: #667eea;
            text-decoration: none;
            font-weight: 600;
        }

        .link:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>
<div class="api-explorer-container">

    <div class="navbar">
        <h1>üîç Interactive API Explorer</h1>
        <div class="user-info">
            <span>Halo, <%= name %></span>
            <a href="/user/documentation" style="margin-right: 15px;">Dokumentasi</a>
            <a href="/user/dashboard">Kembali</a>
        </div>
    </div>

    <div class="explorer-card">
        <div class="explorer-title">üéµ Info Konser API Explorer</div>
        <div class="explorer-subtitle">
            Test API endpoints secara interaktif. Masukkan API Key Anda dan pilih endpoint untuk mencoba.
            <br>
            Untuk dokumentasi lengkap, kunjungi 
            <a href="/user/documentation" class="link">halaman dokumentasi</a>.
        </div>

        <div class="form-row">
            <label>üîë Your API Key</label>
            <input type="text" id="apiKey" 
                   value="<%= apiKey ? apiKey.api_key : '' %>"
                   placeholder="Masukkan API Key Anda">
        </div>

        <!-- Tabs untuk berbagai endpoint -->
        <div class="tabs">
            <button class="tab active" onclick="switchTab('concerts')">üìã Get All Concerts</button>
            <button class="tab" onclick="switchTab('concertById')">üé§ Get Concert By ID</button>
            <button class="tab" onclick="switchTab('filter')">üîç Filter & Search</button>
        </div>

        <!-- Tab Content: Get All Concerts -->
        <div id="concerts" class="tab-content active">
            <h3>GET /api/concerts</h3>
            <p>Mendapatkan daftar semua konser yang tersedia.</p>
            
            <button class="btn-show-response" onclick="testApi('concerts')">
                ‚ñ∂ Test API
            </button>
        </div>

        <!-- Tab Content: Get Concert By ID -->
        <div id="concertById" class="tab-content">
            <h3>GET /api/concerts/:id</h3>
            <p>Mendapatkan detail konser berdasarkan ID.</p>
            
            <table class="param-table">
                <thead>
                    <tr>
                        <th>Parameter</th>
                        <th>Value</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><strong>id</strong></td>
                        <td><input type="number" id="concertId" value="1" style="width:100%;"></td>
                        <td>ID konser yang ingin diakses</td>
                    </tr>
                </tbody>
            </table>

            <button class="btn-show-response" onclick="testApi('concertById')">
                ‚ñ∂ Test API
            </button>
        </div>

        <!-- Tab Content: Filter & Search -->
        <div id="filter" class="tab-content">
            <h3>GET /api/concerts (with filters)</h3>
            <p>Filter dan search konser berdasarkan genre atau keyword.</p>
            
            <table class="param-table">
                <thead>
                    <tr>
                        <th>Parameter</th>
                        <th>Value</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><strong>genre</strong></td>
                        <td>
                            <select id="genre" style="width:100%;">
                                <option value="">-- No Filter --</option>
                                <option value="rock">Rock</option>
                                <option value="pop">Pop</option>
                                <option value="jazz">Jazz</option>
                                <option value="electronic">Electronic</option>
                            </select>
                        </td>
                        <td>Filter berdasarkan genre musik</td>
                    </tr>
                    <tr>
                        <td><strong>search</strong></td>
                        <td><input type="text" id="search" placeholder="Cari nama artis atau judul" style="width:100%;"></td>
                        <td>Cari berdasarkan nama artis atau judul konser</td>
                    </tr>
                </tbody>
            </table>

            <button class="btn-show-response" onclick="testApi('filter')">
                ‚ñ∂ Test API
            </button>
        </div>

        <!-- Result Section -->
        <div id="result" class="result-section" style="display:none;">
            <div class="result-card">
                <h3>üì° API Call</h3>
                <pre id="apiCall">-</pre>
            </div>

            <div class="result-card">
                <h3>üìä Response Code & Duration</h3>
                <pre id="responseCode">-</pre>
            </div>

            <div class="result-card">
                <h3>üìã Response Headers</h3>
                <pre id="responseHeaders">-</pre>
            </div>

            <div class="result-card">
                <h3>üì¶ Response Body</h3>
                <pre id="responseBody">-</pre>
            </div>
        </div>
    </div>
</div>

<script>
    function switchTab(tabName) {
        // Hide all tab contents
        const contents = document.querySelectorAll('.tab-content');
        contents.forEach(c => c.classList.remove('active'));

        // Remove active class from all tabs
        const tabs = document.querySelectorAll('.tab');
        tabs.forEach(t => t.classList.remove('active'));

        // Show selected tab and mark as active
        document.getElementById(tabName).classList.add('active');
        event.target.classList.add('active');
    }

    async function testApi(endpoint) {
        const apiKey = document.getElementById('apiKey').value.trim();
        
        if (!apiKey) {
            alert('Silakan masukkan API Key terlebih dahulu!');
            return;
        }

        const btn = event.target;
        btn.disabled = true;
        btn.innerHTML = 'Loading... <span class="loading"></span>';

        // Gunakan URL relatif agar otomatis mengikuti port yang digunakan
        let url = '/api/concerts';
        let params = new URLSearchParams();

        // Build URL berdasarkan endpoint
        switch(endpoint) {
            case 'concerts':
                // Default: get all concerts
                break;
            
            case 'concertById':
                const concertId = document.getElementById('concertId').value;
                if (concertId) {
                    url += '/' + concertId;
                }
                break;
            
            case 'filter':
                const genre = document.getElementById('genre').value;
                const search = document.getElementById('search').value;
                
                if (genre) params.append('genre', genre);
                if (search) params.append('search', search);
                
                if (params.toString()) {
                    url += '?' + params.toString();
                }
                break;
        }

        const startTime = Date.now();

        try {
            const response = await fetch(url, {
                method: 'GET',
                headers: {
                    'X-API-Key': apiKey,
                    'Content-Type': 'application/json'
                }
            });

            const duration = Date.now() - startTime;
            const data = await response.json();

            // Tampilkan hasil
            document.getElementById('result').style.display = 'block';

            // API Call
            document.getElementById('apiCall').innerText = url;

            // Response Code
            const statusClass = response.ok ? 'status-success' : 'status-error';
            document.getElementById('responseCode').innerHTML = 
                `<span class="${statusClass}">${response.status} ${response.statusText}</span>\n` +
                `Duration: ${duration}ms`;

            // Response Headers
            const headers = {};
            response.headers.forEach((value, key) => {
                headers[key] = value;
            });
            document.getElementById('responseHeaders').innerText = 
                JSON.stringify(headers, null, 2);

            // Response Body
            document.getElementById('responseBody').innerText = 
                JSON.stringify(data, null, 2);

            // Scroll ke hasil
            document.getElementById('result').scrollIntoView({ behavior: 'smooth' });

        } catch (error) {
            // Tampilkan error
            document.getElementById('result').style.display = 'block';
            document.getElementById('apiCall').innerText = url;
            document.getElementById('responseCode').innerHTML = 
                `<span class="status-error">Error</span>\nDuration: ${Date.now() - startTime}ms`;
            document.getElementById('responseHeaders').innerText = '-';
            document.getElementById('responseBody').innerText = 
                JSON.stringify({ error: error.message }, null, 2);
        } finally {
            btn.disabled = false;
            btn.innerHTML = '‚ñ∂ Test API';
        }
    }
</script>

</body>
</html>